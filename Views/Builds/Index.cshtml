@model IEnumerable<Project_6___Group_4___CSCN73060_SEC_1.Models.Build>

@{
    ViewData["Title"] = "PC Builds";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>PC Builds</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Build
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No builds found. Create your first PC build!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var build in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@build.Name</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(build.Description))
                            {
                                <p class="card-text text-muted small">@build.Description</p>
                            }

                            <h6 class="mt-3 mb-2">Components:</h6>
                            <ul class="list-unstyled small">
                                @if (build.Cpu != null)
                                {
                                    <li><strong>CPU:</strong> @build.Cpu.Name</li>
                                }
                                @if (build.Gpu != null)
                                {
                                    <li><strong>GPU:</strong> @build.Gpu.Name</li>
                                }
                                @if (build.Motherboard != null)
                                {
                                    <li><strong>Motherboard:</strong> @build.Motherboard.Name</li>
                                }
                                @if (build.Memory != null)
                                {
                                    <li><strong>Memory:</strong> @build.Memory.Name</li>
                                }
                                @if (build.Storage != null)
                                {
                                    <li><strong>Storage:</strong> @build.Storage.Name</li>
                                }
                                @if (build.Case != null)
                                {
                                    <li><strong>Case:</strong> @build.Case.Name</li>
                                }
                                @if (build.PowerSupply != null)
                                {
                                    <li><strong>PSU:</strong> @build.PowerSupply.Name</li>
                                }
                                @if (build.CpuCooler != null)
                                {
                                    <li><strong>Cooler:</strong> @build.CpuCooler.Name</li>
                                }
                            </ul>

                            @if (build.TotalPrice.HasValue)
                            {
                                <div class="mt-3">
                                    <strong class="text-success">Total: $@build.TotalPrice.Value.ToString("N2")</strong>
                                </div>
                            }

                            <div class="text-muted small mt-2">
                                <em>Updated: @build.UpdatedAt.ToLocalTime().ToString("g")</em>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@build.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                <a asp-action="Edit" asp-route-id="@build.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@build.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
