@model Project_6___Group_4___CSCN73060_SEC_1.Models.Build

@{
    ViewData["Title"] = "Delete Build";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Build</h1>
    <hr />

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this build?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">@Model.Name</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p><strong>Description:</strong> @Model.Description</p>
            }

            @if (Model.TotalPrice.HasValue)
            {
                <p><strong>Total Cost:</strong> <span class="text-success">$@Model.TotalPrice.Value.ToString("N2")</span></p>
            }

            <h6 class="mt-3">Components:</h6>
            <ul>
                @if (Model.Cpu != null)
                {
                    <li><strong>CPU:</strong> @Model.Cpu.Name (@Model.Cpu.Price)</li>
                }
                @if (Model.Gpu != null)
                {
                    <li><strong>GPU:</strong> @Model.Gpu.Name (@Model.Gpu.Price)</li>
                }
                @if (Model.Motherboard != null)
                {
                    <li><strong>Motherboard:</strong> @Model.Motherboard.Name (@Model.Motherboard.Price)</li>
                }
                @if (Model.Memory != null)
                {
                    <li><strong>Memory:</strong> @Model.Memory.Name (@Model.Memory.Price)</li>
                }
                @if (Model.Storage != null)
                {
                    <li><strong>Storage:</strong> @Model.Storage.Name (@Model.Storage.Price)</li>
                }
                @if (Model.Case != null)
                {
                    <li><strong>Case:</strong> @Model.Case.Name (@Model.Case.Price)</li>
                }
                @if (Model.PowerSupply != null)
                {
                    <li><strong>Power Supply:</strong> @Model.PowerSupply.Name (@Model.PowerSupply.Price)</li>
                }
                @if (Model.CpuCooler != null)
                {
                    <li><strong>CPU Cooler:</strong> @Model.CpuCooler.Name (@Model.CpuCooler.Price)</li>
                }
            </ul>

            <p class="text-muted">
                <strong>Created:</strong> @Model.CreatedAt.ToLocalTime().ToString("f")<br>
                <strong>Last Updated:</strong> @Model.UpdatedAt.ToLocalTime().ToString("f")
            </p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash"></i> Yes, Delete This Build
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>
